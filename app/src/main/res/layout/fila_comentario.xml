<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_resena_comentario_autor"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_resena_comentario_nombreAutor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:text="TextView"
        android:textSize="16dp"
        android:textStyle="bold"
        android:fontFamily="@font/cambria"
        app:layout_constraintStart_toEndOf="@id/iv_resena_comentario_autor"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_resena_comentario_fecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12/30/2020"
        android:textSize="14dp"
        android:textStyle="bold"
        android:fontFamily="@font/cambria"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/v_artista_separador"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_resena_comentario_autor"
        app:layout_constraintTop_toBottomOf="@id/tv_resena_comentario_nombreAutor" />

    <TextView
        android:id="@+id/tv_resena_comentario_texto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toEndOf="@id/iv_resena_comentario_autor"
        app:layout_constraintTop_toBottomOf="@id/v_artista_separador"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>